{
  "compilerOptions": {
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "moduleResolution": "node"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ],
  "compileOnSave": false
}
